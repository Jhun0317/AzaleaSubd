generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Settings (Keep SystemSettings as primary)
model SystemSettings {
  id           Int      @id @default(1)
  monthlyDues  Float    @default(300)
  dueDay       Int      @default(15)
  gcashNumber  String   @default("0912049237")
  bankDetails  String?  @db.Text
  updatedAt    DateTime @updatedAt
}

// 2. Residents & Profiles
model User {
  id        Int      @id @default(autoincrement())
  name      String
  phase     String   // Used for the Admin Phase Report
  profile   Profile? 
  payments  PaymentSubmission[] 
}

model Profile {
  id          String   @id @default(cuid())
  fullName    String
  lotNumber   String
  phone       String
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 3. Payments (Using PaymentSubmission for GCash Ref numbers)
model PaymentSubmission {
  id              Int      @id @default(autoincrement())
  referenceNumber String
  status          String   @default("PENDING") // PENDING, APPROVED, REJECTED
  amount          Float
  userId          Int      @default(1)
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())
}

// 4. CMS Features
model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  priority  String   @default("normal")
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  category    String   
  createdAt   DateTime @default(now())
}

model Document {
  id         String   @id @default(cuid())
  title      String
  fileUrl    String
  fileType   String
  category   String?
  uploadedBy String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
